server {
    # sets the domain[s] that this vhost server requests for
	server_name  webspecies.co.uk;

    # Set the charset
    charset utf-8;
	
    # vhost specific access log
	access_log  /var/log/nginx/webspecies.access.log;

    # doc root
	root   /var/www/webspecies;
	
    # output compression saves bandwidth 
    gzip  on;
    gzip_http_version 1.1;
    gzip_vary on;
    gzip_comp_level 6;
    gzip_proxied any;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;

    # make sure gzip does not lose large gzipped js or css files
    # see http://blog.leetsoft.com/2007/7/25/nginx-gzip-ssl
    gzip_buffers 16 8k;

    # Disable gzip for certain browsers.
    gzip_disable “MSIE [1-6].(?!.*SV1)”;
	
    error_page 404 /404.html;
    
    # Disallow direct html pages requests
    location ~* ^.+\.html$ {
       internal;
    }

    # Set image format types to expire in a very long time
    location ~* ^.+\.(jpg|jpeg|gif|png|ico)$ {
        access_log off;
        expires max;
    }
    
    # Set css and js to expire in a very long time
    location ~* ^.+\.(css|js)$ {
        access_log off;
        expires max;
    }

    # Set font files expirity
    location ~* ^.+\.(eot|ttf|woff)$ {
        access_log off;
        expires max;
        add_header Access-Control-Allow-Origin *;
    }
    
    # Display news page, this is required because news folder exists
    location ~ ^/news$ {
        rewrite ^ /news.html break;
    }
    
    # News folder cannot be accessed like this
    location ~ ^/news/$ {
        return 404;
    }
    
    location /contact-process {
        proxy_pass                       http://webspecies.wufoo.com/forms/z7x3k7/;
        proxy_set_header Host            webspecies.wufoo.com;
        proxy_set_header X-Host          webspecies.wufoo.com;
        proxy_set_header X-Real-IP       $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_hide_header                Location;
    }
    
    # Catchall for everything else
	location / {
		index  index.html index.htm;
        
        # Redirect to html pages 
        if (!-e $request_filename) {
            rewrite ^/(.*)$ /$1.html last;
        }
        
        add_header 'X-UA-Compatible' 'IE=edge,chrome=1';
	}
}
 
# handle www domain and redirect to non-www
server {
	server_name www.webspecies.co.uk;
	rewrite ^(.*) http://webspecies.co.uk$1 permanent;
}
